
<table class="table table-striped table-dark">
<thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Image</th>
       </tr>
  </thead>
  <tbody>
      <% @products.each do |p| %>      
    <tr>     
      <td ><%= p.name %></td>
      <td><%= image_tag p.image, size: '100' %></td>  
      <td> <%= link_to 'Edit', edit_product_path(p.id) %></td>
      <td><%= link_to 'Delete', product_path(p.id), method: :delete  %></td>
      <td> <%= link_to 'Show', product_show_path(p.id) %></td>   
      <td> <%= link_to 'Favourite', set_favourite_path(p.id), method: :patch%> </td>
      
    </tr>

    <% end %>
     </tbody>
</table>

<table class="table table-striped table-dark">

<%= form_with model:@product, local:true do |f| %>
<thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Description</th>
      <th scope="col">Image</th>
    </tr>
  </thead>
    <tbody>
    <tr>     
      <td><%= f.text_field :name %></td>
      <td><%= f.number_field :price %></td>
      <td><%= f.text_field :description %></td>
      <td><%= f.text_field :image %></td>
      <td><%= f.submit 'Create'%></td>
    </tr>
     </tbody>
</table>
<% end %>

